<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- Mathematical Constants -->
    <xacro:property name="PI" value="3.1415926535897931" />

    <!-- Macro for da Vinci PSM with Caudier Blade -->
    <xacro:macro name="psm_tool_caudier_blade" params="prefix parent_link">

        <!-- Link 5: Tool Wrist Caudier Link -->
        <link name="${prefix}_tool_wrist_caudier_link">
            <visual>
                <origin rpy="0.00 -${PI/2} 0.0" xyz="-0.0024 0.00 0.000" />
                <geometry>
                    <mesh filename="package://psm_description/meshes/Classic/tool_wrist_caudier_link_1.stl" />
                </geometry>
                <material name="gray">
                    <color rgba="0.5 0.5 0.9 1.0" />
                </material>
            </visual>
            <collision>
                <origin rpy="0.00 -${PI/2} 0.0" xyz="-0.0024 0.00 0.000" />
                <geometry>
                    <mesh filename="package://psm_description/meshes/Classic/tool_wrist_caudier_link_1.stl" />
                </geometry>
            </collision>
        </link>

        <!-- Link 6: Tool Wrist Caudier Shaft Link -->
        <link name="${prefix}_tool_wrist_caudier_shaft_link">
            <visual>
                <origin rpy="0.00 ${PI/2} 0.0" xyz="0.0 -0.0002 0.000" />
                <geometry>
                    <mesh
                        filename="package://psm_description/meshes/Classic/tool_wrist_caudier_link_1_shaft.stl" />
                </geometry>
                <material name="gray">
                    <color rgba="0.5 0.5 0.9 1.0" />
                </material>
            </visual>
            <collision>
                <origin rpy="0.00 ${PI/2} 0.0" xyz="0.0 0.00 0.000" />
                <geometry>
                    <mesh
                        filename="package://psm_description/meshes/Classic/tool_wrist_caudier_link_1_shaft.stl" />
                </geometry>
            </collision>
        </link>

        <!-- Link 7-0: Outer Open Angle Virtual Link -->
        <link name="${prefix}_tool_wrist_caudier_ee_link_0">
            <visual>
                <!-- <origin rpy="0.0 0.0 0.0" xyz="0 0.0225 0"/> -->
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <!-- <box size="0.005 0.045 0.001" /> -->
                    <mesh filename="package://psm_description/meshes/Classic/knife.stl" />
                </geometry>
            </visual>
            <collision>
                <!-- <origin rpy="0.0 0.0 0.0" xyz="0 0.0225 0"/> -->
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <!-- <box size="0.005  0.045 0.001" /> -->
                    <mesh filename="package://psm_description/meshes/Classic/knife.stl" />
                </geometry>
            </collision>
        </link>

        <!-- Link 6-3: Tool Tip Link -->
        <link name="${prefix}_tool_tip_link" />

        <!-- Joint 5: Outer Wrist Pitch Joint: Link 4-1 to Link 5 -->
        <joint name="${prefix}_outer_wrist_pitch" type="revolute">
            <parent link="${parent_link}" />
            <child link="${prefix}_tool_wrist_caudier_link" />
            <axis xyz="0 0 1" />
            <origin rpy="-${PI/2} -${PI/2} 0" xyz="0 0 0" />
            <limit lower="-1.39268" upper="1.39268" velocity=".4" effort="1000" />
        </joint>

        <!-- Joint 6: Tool Wrist Yaw Joint: Link 5 to Link 6 -->
        <joint name="${prefix}_outer_wrist_yaw" type="revolute">
            <parent link="${prefix}_tool_wrist_caudier_link" />
            <child link="${prefix}_tool_wrist_caudier_shaft_link" />
            <axis xyz="0 0 1" />
            <origin rpy="0.00 -${PI/2} -${PI/2}" xyz="0.0091 0 0" />
            <limit lower="-1.39268" upper="1.39268" velocity=".4" effort="1000" />
        </joint>

        <!-- Joint 7-0: Outer Open Angle 1: Link 6 to Link 7-0 -->
        <joint name="${prefix}_jaw" type="fixed">
            <parent link="${prefix}_tool_wrist_caudier_shaft_link" />
            <child link="${prefix}_tool_wrist_caudier_ee_link_0" />
            <!-- <axis xyz="0 1 0"/> -->
            <origin rpy="-${PI/2} 0 0" xyz="0 0 0" />
            <!-- <limit lower="0" upper="1.5707" velocity=".4" effort="1000"/> -->
        </joint>

        <!-- Joint 7-1: Tool Tip Joint: Link 6 to Link 6-3 -->
        <joint name="${prefix}_tool_wrist_caudier_ee" type="fixed">
            <parent link="${prefix}_tool_wrist_caudier_shaft_link" />
            <child link="${prefix}_tool_tip_link" />
            <origin rpy="-${PI/2} 0 0" xyz="0 0.045 0.0025" />
        </joint>

    </xacro:macro>

</robot>