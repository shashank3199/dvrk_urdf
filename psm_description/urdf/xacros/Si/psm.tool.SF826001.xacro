<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- Mathematical Constants -->
    <xacro:property name="PI" value="3.1415926535897931" />

    <!-- Macro for da Vinci PSM Tool SF826001 -->
    <xacro:macro name="SF826001" params="prefix parent_link xyz rpy">

        <!-- Link 0: Tool Main Link -->
        <link name="${prefix}_tool_main_link">
            <inertial>
                <origin xyz="0.027158 2.6368E-15 -0.11369" rpy="0 0 0" />
                <mass value="0.66229" />
                <inertia ixx="0.001902" ixy="2.1435E-18" ixz="7.3606E-06" iyy="0.0016701"
                    iyz="4.919E-19" izz="0.00035117" />
            </inertial>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://psm_description/meshes/SF826001/tool_main_link.stl" />
                </geometry>
                <material name="">
                    <color rgba="0.79216 0.81961 0.93333 1" />
                </material>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://psm_description/meshes/SF826001/tool_main_link.stl" />
                </geometry>
            </collision>
        </link>

        <!-- Link 1: Tool Roll Link -->
        <link name="${prefix}_tool_roll_link">
            <inertial>
                <origin xyz="0.00131 2.3803E-08 -0.0016785" rpy="0 0 0" />
                <mass value="0.00013273" />
                <inertia ixx="9.6885E-10" ixy="2.8872E-14" ixz="1.6022E-10" iyy="7.4038E-10"
                    iyz="-9.9047E-16" izz="1.3365E-09" />
            </inertial>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://psm_description/meshes/SF826001/tool_roll_link.stl" />
                </geometry>
                <material name="">
                    <color rgba="0.79216 0.81961 0.93333 1" />
                </material>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://psm_description/meshes/SF826001/tool_roll_link.stl" />
                </geometry>
            </collision>
        </link>

        <!-- Joint 0: Insertion Joint: Parent Link to Link 0 -->
        <joint name="${prefix}_insertion" type="prismatic">
            <origin xyz="${xyz}" rpy="${rpy}" />
            <parent link="${parent_link}" />
            <child link="${prefix}_tool_main_link" />
            <axis xyz="0 0 -1" />
            <limit lower="0" upper="0.2987" effort="0" velocity="0" />
        </joint>

        <!-- Joint 1: Roll Joint: Link 0 to Link 1 -->
        <joint name="${prefix}_roll" type="revolute">
            <origin xyz="0.05591 0 -0.53039" rpy="0 0 0" />
            <parent link="${prefix}_tool_main_link" />
            <child link="${prefix}_tool_roll_link" />
            <axis xyz="0 0 1" />
            <limit lower="-${PI}" upper="${PI}" effort="0" velocity="0" />
        </joint>

    </xacro:macro>

</robot>