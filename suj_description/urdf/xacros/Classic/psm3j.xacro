<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- Mathematical Constants -->
    <xacro:property name="PI" value="3.1415926535897931" />

    <!-- Macro for the column of the PSM 3 Joint -->
    <xacro:macro name="psm3_j" params="parent_link xyz rpy">

        <!-- Link 19: PSM3 Link 0 -->
        <link name="suj_psm3_L0">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://suj_description/meshes/Classic/suj_psm3_L0.stl" />
                </geometry>
                <material name="GrayBrown"/>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://suj_description/meshes/Classic/suj_psm3_L0.stl" />
                </geometry>
            </collision>
        </link>

        <!-- Link 20: PSM3 Link 1 -->
        <link name="suj_psm3_L1">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://suj_description/meshes/Classic/suj_psm3_L1.stl" />
                </geometry>
                <material name="GrayBrown"/>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://suj_description/meshes/Classic/suj_psm3_L1.stl" />
                </geometry>
            </collision>
        </link>

        <!-- Link 21: PSM3 Link 2 -->
        <link name="suj_psm3_L2">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://suj_description/meshes/Classic/suj_psm3_L2.stl" />
                </geometry>
                <material name="GrayBrown"/>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://suj_description/meshes/Classic/suj_psm3_L2.stl" />
                </geometry>
            </collision>
        </link>

        <!-- Link 22: PSM3 Link 3 -->
        <link name="suj_psm3_L3">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://suj_description/meshes/Classic/suj_psm3_L3.stl" />
                </geometry>
                <material name="GrayBrown"/>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://suj_description/meshes/Classic/suj_psm3_L3.stl" />
                </geometry>
            </collision>
        </link>

        <!-- Link 23: PSM3 Link 4 -->
        <link name="suj_psm3_L4">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://suj_description/meshes/Classic/suj_psm3_L4.stl" />
                </geometry>
                <material name="GrayBrown"/>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://suj_description/meshes/Classic/suj_psm3_L4.stl" />
                </geometry>
            </collision>
        </link>

        <!-- Link 24: PSM3 Mounting Point -->
        <link name="PSM3_mounting_point" />

        <!-- Joint 18: PSM3 Joint 0: Link 1 to Link 19 -->
        <joint name="SUJ_PSM3_J0" type="prismatic">
            <origin xyz="${xyz}" rpy="${rpy}" />
            <parent link="${parent_link}" />
            <child link="suj_psm3_L0" />
            <axis xyz="0 0 -1" />
            <limit lower="0" upper="1.2223" effort="50" velocity="50" />
        </joint>

        <!-- Joint 19: PSM3 Joint 1: Link 19 to Link 20 -->
        <joint name="SUJ_PSM3_J1" type="continuous">
            <origin xyz="0 0 0" rpy="${PI} 0 ${PI/2}" />
            <parent link="suj_psm3_L0" />
            <child link="suj_psm3_L1" />
            <axis xyz="0 0 1" />
        </joint>

        <!-- Joint 20: PSM3 Joint 2: Link 20 to Link 21 -->
        <joint name="SUJ_PSM3_J2" type="continuous">
            <origin xyz="0 -0.5842 -0.000249999999999639" rpy="${PI} 0 -${PI/2}" />
            <parent link="suj_psm3_L1" />
            <child link="suj_psm3_L2" />
            <axis xyz="0 0 -1" />
        </joint>

        <!-- Joint 21: PSM3 Joint 3: Link 21 to Link 22 -->
        <joint name="SUJ_PSM3_J3" type="continuous">
            <origin xyz="0.431800000000001 0 0" rpy="${PI/2} 0 -${PI/2}" />
            <parent link="suj_psm3_L2" />
            <child link="suj_psm3_L3" />
            <axis xyz="0 -1 0" />
        </joint>

        <!-- Joint 22: PSM3 Joint 4: Link 22 to Link 23 -->
        <joint name="SUJ_PSM3_J4" type="continuous">
            <origin xyz="0 -0.199949999999999 -0.061" rpy="-${PI/2} 0 0" />
            <parent link="suj_psm3_L3" />
            <child link="suj_psm3_L4" />
            <axis xyz="0 1 0" />
        </joint>

        <!-- Joint 23: PSM3 RCM Joint: Link 23 to Link 24 -->
        <joint name="PSM3_RCM" type="fixed">
            <origin xyz="0.0 0.8343 -0.04984" rpy="0.0 ${PI} 0.0" />
            <parent link="suj_psm3_L4" />
            <child link="PSM3_mounting_point" />
        </joint>

    </xacro:macro>

</robot>